
{
    "compilerOptions": {
        "composite": true,
      "target": "ES2022",
      "module": "CommonJS",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "core-logic/src"],
    "exclude": ["node_modules", "dist"]
  }
  